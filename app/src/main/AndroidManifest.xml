<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pos.yza.yzapos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".SessionStorage"
        >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newtransaction.NewTransactionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".adminlogin.AdminLoginActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".adminoptions.AdminOptionsActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ViewProductsActivity" />
        <activity android:name=".managetransactions.ManageTransactionsActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>


    </application>

</manifest>